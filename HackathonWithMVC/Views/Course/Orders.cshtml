@model IEnumerable<HackathonWithMVC.Models.Cart>

@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_NavUser.cshtml";
    int count = 1;
}

<h1 class="text-center">Orders</h1>

<hr />
<table class="table text-center">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="align-middle">
            <td>@count</td>
            <td>
                <img src="@item.ImgPath" style="width: 150px">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                <a class="btn btn-sm btn-primary" asp-action="CourseDetails" asp-route-id="@item.CourseId">Details</a> 
                @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            </td>
        </tr>
        count++;
}
    </tbody>
</table>
