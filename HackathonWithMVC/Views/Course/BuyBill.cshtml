@model HackathonWithMVC.Models.Cart

@{
    ViewData["Title"] = "BuyBill";
    Layout = "~/Views/Shared/_NavUser.cshtml";
    float total = @Model.Price;
}

<h1 class="text-center">Your Bill</h1>
<h2>Thank You @TempData["Username"]!! <br />
    Your Payment Of Rs. @(total * 0.18 + total) Was Successful</h2>
    @{
        TempData.Keep("Username");
    }
<div>
    
    <hr />
    <dl class="row">
        <dd class = "col-sm-10">
            <img src="@Model.ImgPath" style="width: 250px"/>
        </dd>
        <dt  class = "col-sm-2"></dt>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>        
    </dl>
</div>
<div>
    <a class="btn btn-sm btn-primary" asp-action="GetAllCourses">Back to List</a>
</div>
