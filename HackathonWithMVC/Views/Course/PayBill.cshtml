@model IEnumerable<HackathonWithMVC.Models.Cart>

@{
    ViewData["Title"] = "PayBill";
    Layout = "~/Views/Shared/_NavUser.cshtml";
    float total = 0;
    int count = 1;

}

<h1 class="text-center">Your Bill</h1>

@foreach (var item in Model)
{
    total += @item.Price;
}
<p>
    <a asp-action="GetAllCourses">Back To All Courses</a>
</p>
<h2>Thank You @TempData["Username"]!! <br />
    Your Payment Of Rs. @(total * 0.18 + total) Was Successful</h2>
    @{
        TempData.Keep("Username");
    }
<table class="table text-center">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="align-middle">
                <td>@count</td>
                <td>
                    <img src="@item.ImgPath" style="width: 150px">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
            </tr>
            count++;
        }
        <hr />
    </tbody>
    <tfoot>
        <td></td>
        <td></td>
        <td></td>
        <td>Rs. @total</td>
    </tfoot>
</table>
